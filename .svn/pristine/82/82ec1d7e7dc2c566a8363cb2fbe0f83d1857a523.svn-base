<style>
	.input-group {
		width: 240px;
	}
	
	.form-group {
		margin-left: 20px;
	}
	
	.daterangepicker .ranges {
		width: 180px;
	}
	
	.daterangepicker .ranges .input-mini {
		width: 84px;
	}
	
	.table {
		width: 100%!important;
		white-space: nowrap;
	}
</style>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox">
				<div class="ibox-title">
					<h5>小组毛利率</h5>
					<div ibox-tools></div>
				</div>
				<div class="ibox-content">
					<article class="form-inline m-b-xs">
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
							<input class="form-control date-picker" date-range-picker ng-model="where.daterange" options="{separator:' 至 ',locale:{format:'YYYY-MM-DD',fromLabel:'开始',toLabel:'结束',applyLabel:'应用',cancelLabel:'取消'}}">
						</div>
						<button class="btn btn-primary" ng-click="load()">查 询</button>
					</article>
					<table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="dtOptions">
						<thead>
							<tr>
								<th>小组</th>
								<th>实际销售额</th>
								<th>毛利润</th>
								<th>毛利率</th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="item in list">
								<td>{{ item.group_name?item.group_name:'其它' }}</td>
								<td>{{ item.actual_sales_volume }}</td>
								<td>{{ item.gross_profit }}</td>
								<td>{{ item.gross_profit_rate=='0%'?'0':item.gross_profit_rate }}</td>
							</tr>
						</tbody>
						<tfoot ng-if="hasTotal">
							<tr>
								<th>合计</th>
								<th>{{ total.actual_sales_volume?total.actual_sales_volume:'-'; }}</th>
								<th>{{ total.gross_profit?total.gross_profit:'-'; }}</th>
								<th>{{ total.gross_profit_rate?total.gross_profit_rate:'-'; }}</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>