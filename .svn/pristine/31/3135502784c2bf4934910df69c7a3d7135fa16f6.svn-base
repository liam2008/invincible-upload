<style>
	.daterangepicker .ranges {
		width: 180px;
	}
	
	.daterangepicker .ranges .input-mini {
		width: 80px;
	}
	
	table.table tr td {
		vertical-align: middle;
	}
</style>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox">
				<div class="ibox-title">
					<h5>{{ activeShow||'样品借还' }}</h5>
				</div>
				<!-- 首页列表 -->
				<section class="ibox-content" id="sectionA" ng-if="!activeShow">
					<nav class="form-inline">
						<div class="form-group m-r">
							<label>样品名称</label>
							<input class="form-control" ng-model="where.name">
						</div>
						<div class="form-group m-r">
							<label>申请时间</label>
							<input class="form-control date-picker" id="daterange" ng-model="daterange" date-range-picker options="{separator:' 至 ',locale:{format:'YYYY-MM-DD',fromLabel:'开始',toLabel:'结束',applyLabel:'应用',cancelLabel:'取消'}}">
						</div>
						<div class="form-group m-r">
							<label>样品状态</label>
							<select class="form-control" ng-model="where.status">
								<option value>全部</option>
								<option>未借出</option>
								<option>部分借出</option>
								<option>全部借出</option>
							</select>
						</div>
						<div class="form-group m-r">
							<label>查看</label>
							<select class="form-control" ng-model="where.status">
								<option value>全部</option>
								<option>仅查看可借出</option>
								<option>仅查看我借出</option>
							</select>
						</div>
						<div class="form-group">
							<button class="btn btn-info" ng-click="handlePagination(1)">查 询</button>
						</div><br>
						<div class="btn-group m-t m-b">
							<button class="btn btn-white" ng-click="checkedBtn('')">确认借出</button>
							<button class="btn btn-white" ng-click="checkedBtn('')">确认归还</button>
						</div>
					</nav>
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th width="38" class="text-center">#</th>
								<th width="120">编号</th>
								<th width="70">状态</th>
								<th width="77" class="text-center">样品图片</th>
								<th>样品名称</th>
								<th>供应商</th>
								<th>样品参数</th>
								<th>单位</th>
								<th>单价</th>
								<th>数量</th>
								<th>已借数量</th>
								<th>可借数量</th>
								<th>备注</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="text-center"><input type="checkbox" ng-model="check" ng-click="checked(check, item)"></td>
								<td>SPO180101001</td>
								<td>部分借出</td>
								<td><img width="60" height="60" src="https://i1.mifile.cn/a4/848def18-47d9-4ca0-8822-c2ac61b83779"></td>
								<td>
									<a href="#">样品名称示例Sample name sample</a>
								</td>
								<td>广州智干电子商务科技有限公司</td>
								<td>
									<div>型号：Model</div>
									<div>规格：Spec</div>
									<div>颜色：白色</div>
								</td>
								<td>套</td>
								<td>999.00</td>
								<td>100</td>
								<td>10</td>
								<td>990</td>
								<td>样品缺少配件，借出时需自备电源及变压器</td>
								<td>
									<button class="btn btn-info btn-xs" ng-click="handleActive('借还记录', item)">借还记录</button>
									<button class="btn btn-primary btn-xs" ng-click="handleActive('添加备注', item)">添加备注</button>
								</td>
							</tr>
						</tbody>
					</table>
					<lin-pagination></lin-pagination>
				</section>
			</div>
		</div>
	</div>
</div>